<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ingredientAllergenTemplateLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ingredientAllergenListArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="0.9"
            app:srcCompat="@drawable/ingredient_allergen_list_arrow" />

        <TextView
            android:id="@+id/ingredientAllergenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxLength="30"
            android:text="Ingredient Or Allergen"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ingredientAllergenDeleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="Delete Icon"
            android:focusable="auto"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@drawable/ingredient_allergen_delete_icon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>